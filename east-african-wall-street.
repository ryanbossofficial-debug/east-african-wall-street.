<script>
  // Dummy content arrays (will be replaced by Netlify CMS later)
  const slidesData = [
    { title: "Africa’s Fintech Boom: Mobile Money Leading the Way", image: "https://images.unsplash.com/photo-1504384308090-c894fdcc538d" },
    { title: "USA-Africa Trade Relations Hit Record High", image: "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3" },
    { title: "Afrobeats & Hip-Hop: The Global Music Fusion", image: "https://images.unsplash.com/photo-1507874457470-272b3c8d8ee2" }
  ];

  const cardsData = [
    { title: "Kenya & USA Strengthen Business Ties", image: "https://images.unsplash.com/photo-1522202176988-66273c2fd55f", description: "Kenya’s exports to the US have grown by 20% in the past year, driven by textiles, coffee, and tech outsourcing partnerships." },
    { title: "Afrobeats Takes Over New York", image: "https://images.unsplash.com/photo-1511671782779-c97d3d27a1d4", description: "Artists like Burna Boy, Ayra Starr, and Davido are selling out arenas in the US, proving Africa’s sound is now global." },
    { title: "East Africa’s Tech Startups Raise $500M", image: "https://images.unsplash.com/photo-1504384308090-c894fdcc538d", description: "From Nairobi to Kigali, startups are attracting global investors, with fintech and agritech leading the charge." }
  ];

  // Render hero slides
  const hero = document.getElementById('hero');
  slidesData.forEach((slide, i) => {
    const div = document.createElement('div');
    div.className = 'slide' + (i === 0 ? ' active' : '');
    div.style.backgroundImage = `url('${slide.image}')`;
    div.innerHTML = `<h2>${slide.title}</h2>`;
    hero.appendChild(div);
  });

  // Render cards
  const mainCards = document.getElementById('main-cards');
  cardsData.forEach(card => {
    const div = document.createElement('div');
    div.className = 'card';
    div.innerHTML = `<img src="${card.image}" alt="${card.title}"><h3>${card.title}</h3><p>${card.description}</p>`;
    mainCards.appendChild(div);
  });

  // Hero slider animation
  let slides = document.querySelectorAll('.slide');
  let index = 0;
  setInterval(() => {
    slides[index].classList.remove('active');
    index = (index + 1) % slides.length;
    slides[index].classList.add('active');
  }, 4000);
</script>

